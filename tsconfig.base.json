{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowImportingTsExtensions": true
  },
  "references": [
    { "path": "./packages/ui/src" },
    { "path": "./packages/kokomen-utils/src" }
  ],
  "include": ["**/*.ts", "**/*.tsx", "jest.setup.ts"]
}
