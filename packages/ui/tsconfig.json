{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "outDir": "../dist",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@assets/*": ["./assets/*"],
      "@components/*": ["./src/components/*"]
    },
    "types": ["@kokomen/types"]
  },
  "include": ["./**/*"],
  "exclude": ["**/*.test.*", "**/*.spec.*"]
}
