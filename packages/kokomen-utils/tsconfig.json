{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "moduleResolution": "bundler",
    "declarationMap": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "types": ["@types/dom-speech-recognition"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*", "node_modules/**/*", "**/*.test.ts"]
}
