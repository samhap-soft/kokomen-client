{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "emitDeclarationOnly": false,

    "strict": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "types": ["@types/react"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "**/*.test.*", "**/*.spec.*"]
}
